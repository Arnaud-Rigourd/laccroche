<%# <h1>TOP 10</h1> %>

<main class="loop js-loop" id="main" data-controller="top-project" data-top-project-target="context" data-action="scroll->top-project#scroll mousemove->top-project#float">

  <div class="top-title">
    <% @top10.each_with_index do |t, index| %>
      <h1><%= t.title %></h1>
    <% end %>
  </div>

   <div class="top-title">
    <% @top10.reverse!.each_with_index do |t, index| %>
      <h1><%= t.title %></h1>
    <% end %>
  </div>

  <% @top10.each_with_index do |t, index| %>
    <section class="scrool_card top-card card" data-top-project-target="floatImage", style = "background-image: url('<%= cl_image_path t.photo.key if t.photo.attached? %>')" >
      <div class="scrool_card_contenu float-image">
        <%= t.title %>
      </div>
    </section>
  <% end %>

  <%# clones %>

  <% @top10.first(2).each_with_index do |t, index| %>
    <section class="scrool_card top1 is-clone card " data-top-project-target="clone floatImage", style = "background-image: url('<%= cl_image_path t.photo.key if t.photo.attached? %>')">
        <div class="scrool_card_contenu">
          <%= t.title %>
        </div>
    </section>
  <% end %>

</main>
